    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "husky": "^3.0.9",
    "np": "^5.1.3",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@ffprobe-installer/ffprobe": "^1.0.12",
    "carlo": "^0.9.46",
    "count-files": "^2.6.2",
    "cross-zip": "^2.1.6",
    "execa": "^3.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "make-dir": "^3.0.0",
    "sade": "^1.6.1",
    "shortid": "^2.2.15",
    "tempy": "^0.3.0",
    "zip-a-folder": "0.0.9"
